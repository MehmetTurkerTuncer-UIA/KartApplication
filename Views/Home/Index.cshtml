<div class="container">
    <!-- Sol Menü -->
    <div class="sidebar">
        <img src="/images/logo.png" alt="Logo" class="logo">
        <button class="menu-btn">Hjem</button>
        <button class="menu-btn">Mine Saker</button>
        <button class="menu-btn profile-btn">Profil</button>
        <button class="menu-btn logout-btn">Logg ut</button>
    </div>

    <!-- Ana İçerik -->
    <div class="content">
        <!-- Başlık ve Hoşgeldin Mesajı -->
        <div class="header">
            <h1>@ViewData["Title"]</h1>
            <p>Velkommen Ahmet Kirac <br> Medlem</p>
        </div>

        <!-- İlerleme Çubuğu -->
        <div class="progress-bar">
            <span>1. Velg sted</span>
            <span>Beskrivelse</span>
            <span>Oppsummering</span>
            <span>Kvittering</span>
        </div>

        <!-- Harita ve Butonlar -->
        <div class="map-section">
            <input type="text" placeholder="skriv adress" class="search-bar">
            <div class="map">
                <!-- Harita API'si burada yer alacak -->
                <img src="/images/map-placeholder.png" alt="Map">
            </div>
            <div class="map-buttons">
                <button class="map-btn blue">Fest en nål</button>
                <button class="map-btn orange">Legg til vei</button>
                <button class="map-btn red">Fjern vei</button>
            </div>
            <button class="next-btn">Neste</button>
        </div>

        <!-- Alt Bilgi -->
        <footer>
            <p>© 2024 Kartverket. Alle rettigheter forbeholdt.</p>
        </footer>
    </div>
</div>