        color: #ffffff; /* White text */
        padding: 10px 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        width: 90%;
        text-align: center;
        font-size: 1rem;
    }

    .alert-danger {
        background-color: #b0002064; /* Red background */
        color: #ffffff; /* White text */
        padding: 10px 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        width: 90%;
        text-align: center;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

    .form-label {
        color: #E0E0E0;
        font-size: 16px;
        min-width: 120px;
        text-align: left;
        margin-right: 10px;
    }

    .form-control-lg {
        background-color: #2C2C2C;
