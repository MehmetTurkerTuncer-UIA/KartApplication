@{
    ViewData["Title"] = "Bruker Page";
    Layout = "~/Views/Shared/_BrukerLayout.cshtml";
}


<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="bruker.css" />

<div class="sidebar">
    <div class="logo">Logo</div>
    <button>Hjem</button>
    <button>Mine Saker</button>
    <button>Profil</button>
    <button class="logout">Logg ut</button>
</div>

<div class="map-container">
    <div class="top-navigation">
        <span class="step">Opprett Sak ></span>
        <span class="step active">1. Velg sted ></span>
        <span class="step">Beskrivelse ></span>
        <span class="step">Oppsummering ></span>
        <span class="step">4. Kvittering</span>
    </div>

    <div class="search-bar mt-3">
        <input type="text" class="form-control" placeholder="skriv adress">
    </div>

    <div id="map"></div>

    <div class="action-buttons">
        <button class="blue">Fest en nål</button>
        <button class="orange">Legg til vei</button>
        <button class="red">Fjern vei</button>
        <button class="green">Neste</button>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
    // Haritayı ayarla
    var map = L.map('map').setView([58.1467, 7.9956], 13);

    // Harita katmanı ekle
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
    }).addTo(map);

    // Haritada tıklama etkinliği
    map.on('click', function (e) {
        var latitude = e.latlng.lat;
        var longitude = e.latlng.lng;
        alert("Seçilen koordinatlar: Enlem: " + latitude + ", Boylam: " + longitude);
    });</script>