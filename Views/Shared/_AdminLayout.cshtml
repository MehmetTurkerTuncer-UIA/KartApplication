<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
    <!-- Felles CSS-fil -->
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    @RenderSection("Head", required: false)
</head>
<body>

    <div class="outer-container">
        <div class="headermenu-wrapper">   

            <div class="headermenu">  
                <!-- Hjem-knappen -->
@*<a href="/admin" class="menu-button btn-hjem">
    <i class="fas fa-home"></i> Hjem
</a>

                <!-- Logg ut-knappen -->
                <a href="/logout" class="menu-button btn-logout">
    <i class="bi bi-door-open"></i> </i> Logg ut
</a>*@
   <partial name="_LoginPartial2" />

            </div>
        </div>

        <header>
            <div class="header-container">
                <div class="logo">
                    <img src="~/images/as.png" alt="Logo" style="width: auto; height: 150px;">
                </div>
                <div class="header-right">
                     <h2><partial name="_LoginPartial" /></h2>
                <p style="margin-top: -25px;">Admin</p>
                </div>
            </div>
        </header>

        <div class="main-container">
            @* Hvis denne siden ikke er "Legg til ansatt", vis standard layout *@
            @if (ViewBag.IsLeggTilAnsatt != true)
            {
                <div class="content-top">
                    <div class="search-filter-container">
                        <!-- Venstre Side: Søkboks -->
                        <div class="search-box">
                            <input type="text" placeholder="Søk" class="search-input">
                            <button class="search-btn">Søk</button>
                        </div>
                    </div>
                    <main class="content">
                        @RenderBody()
                    </main>
                </div>
            }
            else
            {
                @RenderBody() @* Bare forminnholdet skal rendres *@
            }
        </div>
    </div>

    <!-- Footer vises i begge tilfeller -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-left">
                &copy; 2024 - KartverketWebApplication
            </div>

            <div class="footer-right">
                <div class="footer-links">
                    <a href="/About">Om oss</a>
                    <a href="/Privacy">Personvern</a>
                    <a href="/Terms">Vilkår</a>
                    <a href="/Contact">Kontakt oss</a>
                    <a href="/Tips">Tips oss</a>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
