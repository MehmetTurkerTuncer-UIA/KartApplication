@model List<SakModel>

@{
    ViewData["Title"] = "Saksbehandler Sayfası";
    Layout = "~/Views/Shared/_SaksBehandlerLayout.cshtml";
}

<table class="tablesaksbehandler" id="saksbehandlermenu">
    <thead>
        <tr>
            <th>Dato</th>
            <th>Sak Status</th>
            <th>Referansenummer</th>
            <th>Tilordnet Status</th>
            <th>Kontrol Status</th>
        </tr>
    </thead>
    <tbody id="saksbehandlersaks">
        @foreach (var sakModel in Model)
        {
            <tr onclick="window.location.href='@Url.Action("Detaljer", "Saksbehandler", new { id = sakModel.Id })'" style="cursor: pointer;">
                <td>@sakModel.CreatedAt.ToShortDateString()</td>
                 <td>@sakModel.Status</td>
                <td>@sakModel.ReferenceNumber</td>
                <td>@sakModel.ArbeidStatus </td>
                <td>@sakModel.KontrolStatus </td>

            </tr>
        }
    </tbody>
</table>
