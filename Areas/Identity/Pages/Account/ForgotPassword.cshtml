@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glemt passordet ditt?";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="containerRegister">
    <div class="containerRegisterTitle"> <!-- Sınıf adı düzeltildi -->
@ViewData["Title"]
    </div>

    <div class="containerRegisterDetalje"> <!-- Sınıf adı düzeltildi -->
       <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Tilbakestill Passord</button>
        </form>

    </div>
</div>















@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
